<%= form_tag "#{}", class: "validate", method: :get, remote: true do %>
  <div class="row form-group">
    <div class="col-sm-5">
      <div class="col-sm-4">
        <%= label_tag :username, "Username", class: "control-tag" %>
      </div>
      <div class="col-sm-8">
        <%= text_field_tag :username, nil, class: "form-control" %>
      </div>
    </div>
    <div class="col-sm-5">
      <div class="col-sm-4">
        <%= label_tag :email, "Legal Email", class: "control-tag" %>
      </div>
      <div class="col-sm-8">
        <%= text_field_tag :email, nil, class: "form-control" %>
      </div>
    </div>
     <div class="col-sm-5">
      <div class="col-sm-4">
        <%= label_tag :address, "Address", class: "control-tag" %>
      </div>
      <div class="col-sm-8">
        <%= text_field_tag :address, nil, class: "form-control" %>
      </div>
    </div>
     <div class="col-sm-5">
      <div class="col-sm-4">
        <%= label_tag :phone, "Phone", class: "control-tag" %>
      </div>
      <div class="col-sm-8">
        <%= text_field_tag :phone, nil, class: "form-control" %>
      </div>
    </div>
    <div class="col-sm-2">
      <div class="col-sm-12">
          <input class="btn btn-default pull-right" type="submit" value="Search">
      </div>
    </div>
  </div>
  </div>
<% end %>